<h3><%= @manager.name %></h3>
<%= form_for [@company, @manager],
  html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group" >
      <%= f.label :name, "ФИО",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10" >
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>
    </div>
    <%= f.fields_for :user do |user_form| %>
      <div class="form-group" >
        <%= user_form.label :email, "Email",
          class: "col-sm-2 control-label" %>
        <div class="col-sm-10" >
          <%= user_form.email_field :email, required: true,
            class: "form-control" %>
          <span class="help-block" >Смена email изменит данные для входа в аккаунт для данного менеджера</span>
        </div>
      </div>
    <% end %>
    <%= f.submit "Сохранить", class: "btn btn-success pull-right",
      confirm: "Вы уверены?"%>
  </fieldset>
<% end %>
