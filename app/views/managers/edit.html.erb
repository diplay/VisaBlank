<h3><%= @manager.name %></h3>
<%= form_for @manager,
  html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group" >
      <%= f.label :name, "ФИО",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10" >
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>
    </div>
    <%= f.submit "Сохранить", class: "btn btn-success pull-right",
      confirm: "Вы уверены?"%>
  </fieldset>
<% end %>
