<h3>Список пользователей</h3>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Email</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tbody>
    <%= content_tag_for :tr, @users do |user| %>
      <td><%= link_to user.email, edit_user_path(user) %></td>
      <td><%= user.active ? "Активен" : "Неактивен" %></td>
    <% end %>
  </tbody>
</table>
