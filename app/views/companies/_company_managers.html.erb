<div class="panel panel-info" >
  <div class="panel-heading" >
    <h2 class="panel-title" >Список менеджеров</h2>
  </div>
  <div class="panel-body" >
    <table class="table table-hover" >
      <thead>
        <tr>
          <th>ФИО</td>
          <th>Прибыль за месяц</td>
          <th>Клиентов</th>
        </tr>
      </thead>
      <tbody>
      <% @company.managers.each do |manager| %>
      <tr>
        <td><%= link_to manager.name, manager_path(manager) %></td>
        <td><%= manager.month_profit %></td>
        <td><%= manager.clients.length %></td>
      </tr>
      <% end %>
      </tbody>
      <% if @user.role == "company" %>
        <tfoot>
          <tr>
            <td>
        <%= link_to "Добавить менеджера", new_company_manager_path(@company),
          class: "btn btn-success btn-xs"%>
            </td>
          </tr>
        </tfoot>
      <% end %>
    </table>
  </div>
</div>
