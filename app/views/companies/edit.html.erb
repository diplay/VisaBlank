<h3>Редактирование компании</h3>
<%= form_for @company, html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group" >
      <%= label_tag :company_name, "Название компании",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_email, "E-mail",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, required: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_phone, "Телефон",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_address, "Адрес",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_tin, "ИНН",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :tin, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_bank_details, "Банковские данные",
        class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_area :bank_details, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :repr_i, "Гениральный директор(именительный падеж)",
        class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_area :repr_i, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :repr_r, "Гениральный директор(родительный падеж)",
        class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_area :repr_r, class: "form-control" %>
      </div>
    </div>
    <% if @user.role == "admin" %>
      <div class="form-group" >
        <%= label_tag :company_paid_before, "Проплачено до",
          class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= f.date_field :paid_before, class: "form-control" %>
        </div>
      </div>
    <% end %>
    <div class="pull-right" >
    <%= f.submit "Сохранить", class: "btn btn-success" %>
    &nbsp;
    <%= link_to "Не сохранять", company_path(@company), class: "btn btn-warning" %>
  </fieldset>
<% end %>
