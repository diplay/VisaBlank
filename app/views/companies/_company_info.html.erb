<div class="panel panel-info" >
  <div class="panel-heading" >
    <h2 class="panel-title" >Информация о компании</h2>
  </div>
  <div class="panel-body" >
    <table class="table" >
      <thead>
        <tr>
          <td></td>
          <td><%= link_to "Редактировать", edit_company_path,
            class: "btn btn-success btn-xs" %></td>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td>Название</td>
        <td><%= @company.name %></td>
      </tr>
      <tr>
        <td>Адрес</td>
        <td><%= @company.address %></td>
      </tr>
      <tr>
        <td>ИНН</td>
        <td><%= @company.tin %></td>
      </tr>
      <tr>
        <td>Телефон</td>
        <td><%= @company.phone %></td>
      </tr>
      <tr>
        <td>E-mail</td>
        <td><%= @company.email %></td>
      </tr>
      <tr>
        <td>Банковские данные</td>
        <td><%= @company.bank_details %></td>
      </tr>
      <tr>
        <td>Гениральный директор(именительный падеж)</td>
        <td><%= @company.repr_i %></td>
      </tr>
      <tr>
        <td>Гениральный директор(родительный падеж)</td>
        <td><%= @company.repr_r %></td>
      </tr>
      <% if @company.active? %>
        <tr class="bg-success" >
      <% else %>
        <tr class="bg-danger" >
      <% end %>
        <td>Проплачено до</td>
        <td><%= @company.paid_before.inspect %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
