<h3>Создание заявки</h3>
<%= form_for @claim, html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group" >
      <%= label_tag :company_claim_name, "Название компании",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_claim_email, "E-mail",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, required: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= label_tag :company_claim_phone, "Телефон",
        class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>
    </div>
  <%= f.submit "Подать заявку", class:"pull-right btn btn-success" %>
  </fieldset>
<% end %>
