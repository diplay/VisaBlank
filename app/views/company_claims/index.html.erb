<h3>Заявки</h3>
<table class="table table-hover" >
  <thead>
    <tr>
      <th>Id</th>
      <th>Название</th>
      <th>Email</th>
      <th>Телефон</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td>Всего заявок: <%= @claims.length %></td>
    </tr>
  </tfoot>
  <tbody>
  <% @claims.each do |claim| %>
    <tr>
    <%= content_tag :td, claim.id %>
    <%= content_tag :td, link_to(claim.name, edit_company_claim_path(claim)) %>
    <%= content_tag :td, claim.email %>
    <%= content_tag :td, claim.phone %>
    <%= content_tag :td, claim.status_string %>
    </tr>
  <% end %>
  </tbody>
</table>
