<tr>
  <th>Id заявки</th>
  <td><%= @claim.id %></td>
</tr>
<tr>
  <th>Название</th>
  <td><%= @claim.name %></td>
</tr>
<tr>
  <th>E-mail</th>
  <td>
    <% if @user != nil && @user.role == 'admin' %>
      <%= @claim.email %>
    <% else %>
      <span class="label label-default" >Скрыто</span>
    <% end %>
  </td>
</tr>
<tr>
  <th>Телефон</th>
  <td>
    <% if @user != nil && @user.role == 'admin' %>
      <%= @claim.phone %>
    <% else %>
      <span class="label label-default" >Скрыто</span>
    <% end %>
  </td>
</tr>
<tr>
  <th>Статус заявки</th>
  <td><%= @claim.status_string %></td>
</tr>
