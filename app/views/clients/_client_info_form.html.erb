  <fieldset>
    <div class="form-group" >
      <%= f.label :fio, "ФИО", class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= f.text_field :fio, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :date_of_birth, "Дата рождения",
        class: "control-label col-sm-2"%>
      <div class="col-sm-10" >
        <%= f.date_field :date_of_birth, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :sex, "Пол", class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <label class="radio-inline" >
          <%= f.radio_button :sex, :true %>
          Мужской
        </label>
        <label class="radio-inline" >
          <%= f.radio_button :sex, :false %>
          Женский
        </label>
      </div>
    </div>
    <h4>Паспорт</h4>
    <div class="form-group" >
      <%= f.label :passport_number_series, "Серия",
        class: "control-label col-sm-1"%>
      <div class="col-sm-1" >
        <%= f.text_field :passport_number_series, class: "form-control input-sm" %>
      </div>
      <%= f.label :passport_number, "Номер",
        class: "control-label col-sm-1" %>
      <div class="col-sm-2" >
        <%= f.text_field :passport_number, class: "form-control input-sm" %>
      </div>
      <%= f.label :passport_given_date, "Дата",
        class: "control-label col-sm-1" %>
      <div class="col-sm-2" >
        <%= f.date_field :passport_given_date, class: "form-control input-sm" %>
      </div>
      <%= f.label :passport_given_code, "Код подразделения",
        class: "control-label col-sm-2" %>
      <div class="col-sm-2" >
        <%= f.text_field :passport_given_code, class: "form-control input-sm" %>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :passport_given, "Выдан",
        class: "control-label col-sm-1"%>
      <div class="col-sm-11" >
          <%= f.text_field :passport_given, class: "form-control" %>
      </div>
    </div>
  </fieldset>
  <fieldset>
  <%= f.fields_for :foreign_passport_data do |data| %>
    <h4>Данные для загранпаспорта</h4>
    <div class="form-group" >
      <%= data.label :fio_changed, "Старое ФИО",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :fio_changed, class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :place_of_birth, "Место рождения",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :place_of_birth , class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :registration, "Данные регистрации",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :registration , class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :citizenship, "Гражданство",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :citizenship , class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :citizenship_other, "Другие гражданства",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :citizenship_other , class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :aim, "Цель получения",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :aim , class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :previous_passport, "Получение",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.select :previous_passport,
          options_for_select([["Первичное", 0], ["Взамен использованного", 1],
                              ["Взамен испорченного", 2],
                              ["Взамен утраченного", 3]]), {},
          {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :secret_access, "Доступ к тайне",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :secret_access , class: "form-control" %>
      </div>
    </div>
    <div class="form-group" >
      <%= data.label :contract_liability, "Договорные обязательства",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
        <%= data.text_field :contract_liability , class: "form-control" %>
      </div>
    </div>
    <p>
    Тут еще поля...
    </p>
  <% end %>
  </fieldset>
