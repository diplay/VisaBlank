<h3>Новый документ</h3>
<%= form_for [@client, @order], html: {class: "form-horizontal"} do |f| %>
  <fieldset>
    <div class="form-group" >
      <%= f.label :document_template_id, "Тип документа",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
          <%= f.select :document_template_id, options_for_select(@templates), {},
            {class: "form-control"}%>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :comments, "Цена для клиента:",
        class: "control-label col-sm-2" %>
      <div class="col-sm-3" >
          <%= f.text_field :client_price, class: "form-control"%>
      </div>
      <%= f.label :comments, "Оплачено:",
        class: "control-label col-sm-2" %>
      <div class="col-sm-3" >
          <%= f.text_field :client_payed, class: "form-control"%>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :comments, "Цена для компании:",
        class: "control-label col-sm-2" %>
      <div class="col-sm-3" >
          <%= f.text_field :cost, class: "form-control"%>
      </div>
      <%= f.label :comments, "Оплачено:",
        class: "control-label col-sm-2" %>
      <div class="col-sm-3" >
          <%= f.text_field :cost_payed, class: "form-control"%>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :comments, "Необходимо выполнить до:",
        class: "control-label col-sm-2" %>
      <div class="col-sm-3" >
          <%= f.date_field :deadline, class: "form-control"%>
      </div>
    </div>
    <div class="form-group" >
      <%= f.label :comments, "Комментарий",
        class: "control-label col-sm-2" %>
      <div class="col-sm-10" >
          <%= f.text_area :comments, class: "form-control"%>
      </div>
    </div>
  </fieldset>
  <%= f.submit "Создать документ", class: "btn btn-success pull-right" %>
<% end %>
